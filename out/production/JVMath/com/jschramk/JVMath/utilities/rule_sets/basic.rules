@FLIP
solve (y = x) {
    x = y : Flip the equation so ${$x}$ is on the left side
} where {
    x: is f(#target)
    y: not f(#target)
}

solve (x * a = y) {
    (x * a)/a = y/a : Divide both sides by ${$a}$
    x = y/a : Cancel ${$a}S in the numerator and denominator on the left side
} where {
    x: is f(#target)
    y: not f(#target)
    a: not f(#target)
}


